<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AutorizacaoFilter</filter-name>
        <filter-class>br.senac.sp.filtro.AutorizacaoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AutorizacaoFilter</filter-name>
        <url-pattern>/protegido/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>notestore</servlet-name>
        <servlet-class>br.senac.sp.servlet.ProcessController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>/login</servlet-name>
        <servlet-class>br.senac.sp.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>notestore</servlet-name>
        <url-pattern>/notestore</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>protegido/index.html</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <jsp-property-group>
            <display-name>index</display-name>
            <url-pattern>/protegido/index.html</url-pattern>
        </jsp-property-group>
        <jsp-property-group>
            <display-name>clientes</display-name>
            <url-pattern>/protegido/cadastroCliente/cadastroCliente.jsp</url-pattern>
        </jsp-property-group>
    </jsp-config>
</web-app>
